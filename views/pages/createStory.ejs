<%-include('../partial/head.ejs') %>
<link rel="stylesheet" href="/style/auth.css">

</head>

<body>
  <%-include('../partial/navigation.ejs') %>

  <div class="container">
    <div class="form-container">
      <form action="/stories/add-stories" method="post">
        <div class="form-group">
          <label for="">Title</label>
          <div class="input-and-alert">
              <% if(error.title){%>
                <div class="error error-message"><%=error.title %></div>
              <% } %>
              <input type="text" name="title" placeholder="Enter Your Story Title">
          </div>
        </div>
        <div class="form-group">
          <label for="">Description</label>
          <div class="input-and-alert">
              <% if(error.description){%>
                <div class="error error-message"><%=error.description %></div>
              <% } %>
              <textarea rows="5" name="description" placeholder="Describe Your Story"><%if(oldValue.description){%><%=oldValue.description %> <%} %></textarea>
          </div>
        </div>
        <button class="btn btn-register">Publish</button>
      </form>
    </div>
  </div>



  <%-include('../partial/footer.ejs') %>
  <%-include('../partial/end.ejs') %>